{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "#/services/*": [
        "services/*"
      ],
      "#/components/*": [
        "components/*"
      ],
      "#/providers/*": [
        "providers/*"
      ],
      "#/hooks/*": [
        "hooks/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../domain"
  ],
  "exclude": [
    "node_modules"
  ]
}
