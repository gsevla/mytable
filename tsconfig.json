{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["ES2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./config/**/*.js", "./noop.ts"]
}
